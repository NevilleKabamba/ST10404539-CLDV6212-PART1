@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1>Welcome to ABC Retail</h1>

    <!-- Upload Image to Blob Storage -->
    <div class="card mt-4">
        <div class="card-header">
            <h2>Upload Product Image</h2>
        </div>
        <div class="card-body">
            <form asp-action="UploadImage" asp-controller="Home" enctype="multipart/form-data" method="post">
                <div class="form-group">
                    <input type="file" class="form-control-file" name="file" />
                </div>
                <button type="submit" class="btn btn-primary">Upload Image</button>
            </form>
        </div>
    </div>

    <!-- Add Customer Profile to Table Storage -->
    <div class="card mt-4">
        <div class="card-header">
            <h2>Add Customer Profile</h2>
        </div>
        <div class="card-body">
            <form asp-action="AddCustomerProfile" asp-controller="Home" method="post">
                <div class="form-group">
                    <label for="FirstName">First Name</label>
                    <input type="text" class="form-control" id="FirstName" name="FirstName" required />
                </div>
                <div class="form-group">
                    <label for="LastName">Last Name</label>
                    <input type="text" class="form-control" id="LastName" name="LastName" required />
                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" required />
                </div>
                <div class="form-group">
                    <label for="PhoneNumber">Phone Number</label>
                    <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber" required />
                </div>
                <button type="submit" class="btn btn-primary">Add Customer</button>
            </form>
        </div>
    </div>

    <!-- Process Order (Queue Message) -->
    <div class="card mt-4">
        <div class="card-header">
            <h2>Process Order</h2>
        </div>
        <div class="card-body">
            <form asp-action="ProcessOrder" asp-controller="Home" method="post">
                <div class="form-group">
                    <label for="OrderId">Order ID</label>
                    <input type="text" class="form-control" id="OrderId" name="orderId" required />
                </div>
                <button type="submit" class="btn btn-primary">Process Order</button>
            </form>
        </div>
    </div>

    <!-- Upload Contract to File Storage -->
    <div class="card mt-4">
        <div class="card-header">
            <h2>Upload Contract</h2>
        </div>
        <div class="card-body">
            <form asp-action="UploadContract" asp-controller="Home" enctype="multipart/form-data" method="post">
                <div class="form-group">
                    <input type="file" class="form-control-file" name="file" />
                </div>
                <button type="submit" class="btn btn-primary">Upload Contract</button>
            </form>
        </div>
    </div>
</div>
